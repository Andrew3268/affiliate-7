<!-- Logo -->
<span class="logo">
  <a href="/">Oh,i gotta buy this</a>
  <span>Quick way to find the best deals</span>
</span>

<!-- Nav -->
<nav id="nav">
  <ul>
    <li><%= link_to "Home", root_path %></li>

    <li>
      <a href="#" class="icon fa-angle-down">Gadgets</a>
      <ul>
        <li><%=link_to "What's New", root_path %></li>
        <% Category.all.each do |category| %>
         <li><%= link_to category.name, posts_path(category: category.name) %></li>
        <% end %>
      </ul>
    </li>

    <li>
      <a href="#" class="icon fa-angle-down">Deals</a>
      <ul>
       <li><%= link_to "Amazon", dealzons_path %></li>
       <li><%= link_to "eBay", events_path %></li>
      </ul>
    </li>

    <li><%= link_to "Blog", blogs_path %></li>

    <% if can? :update, @post %>
     <li>
       <a href="#" class="icon fa-angle-down">Create & Manage</a>
       <ul>
         <li>
            <a href="/dealzons">Create</a>
            <ul>
             <li><%= link_to "Gadget", new_post_path %></li>
             <li><%= link_to "Amazon", new_dealzon_path %></li>
             <li><%= link_to "eBay", new_event_path %></li>
             <li><%= link_to "Blog", new_blog_path %></li>
            </ul>
         </li>
         <li>
          <a href="/dealzons">Create category</a>
          <ul>
           <li><%= link_to "Gadget", new_category_path %></li>
           <li><%= link_to "Amazon", new_acategory_path %></li>
           <li><%= link_to "eBay", new_ecategory_path %></li>
          </ul>
         </li>
         <li>
          <a href="/dealzons">Manage category</a>
          <ul>
           <li><%= link_to "Gadget", categories_path %></li>
           <li><%= link_to "Amazon", acategories_path %></li>
           <li><%= link_to "eBay", ecategories_path %></li>
          </ul>
         </li>    
         <% if user_signed_in? %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
         <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
         <% end %>

      </ul>
    </li>
    <% end %>
    
  </ul>
</nav>