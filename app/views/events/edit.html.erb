<header id="header">
  <%= render 'posts/navbar' %> 
</header>
<div class="wrapper">
  <section class="main">
   <%= simple_form_for @event do |f| %>
      <h1>Edit Deals of Amazon</h1>
      <div class="form_section">
       <%= f.collection_select :ecategory_id, Ecategory.all, :id, :name, {prompt: "Choose a category"} %><br/>
       <%= f.select :eb_expire, ([["Ongoing", ""], "This code has expired"]) %><br/>
       <%= f.input :eb_title %>
       <%= f.input :eb_image %>
       <%= f.input :eb_ckeditor, as: :text, input_html: { class: 'ckeditor' }, label: "Description" %>
       <%= f.input :eb_review %>
       <%= f.input :eb_code %>
       <%= f.input :eb_date %>
       <%= f.input :eb_price_is %>
       <%= f.select :eb_shipping, ([["No! Shipping isn't free", ""], "Yes! Shipping is free"]) %><br/>
       <%= f.input :eb_price_was %>
       <%= f.input :eb_price_sale %>
       <div class="form_samll_section">
        <p>If it is Freatured Sale</p>
        <%= f.input :eb_featured_sale, label: "Freatured Sale in Index page" %>
       </div>
       <%= f.input :eb_link %>
       <br/>

       <%= f.button :submit %>
      </div>
    <% end %>
  </section>
</div>