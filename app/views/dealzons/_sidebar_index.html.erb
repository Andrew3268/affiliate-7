<aside class="sidebar">
  <section>

   <section>
    <h3>AMAZON QUICK SEARCH</h3>
    <section data-group="modal-group">
      <div class="container">
        <a href="#" class="image fit"><img src="https://pmcvariety.files.wordpress.com/2018/01/amazon-logo.jpg?w=1000" alt=""></a>
        <p>Amazon offers thousands of great deals, but finding the best deal through endless pages might make you crazy. It offers a quick way to find the best deals on Amazon.</p>
        <a class="button btn-px open-modal" data-modal="modal">Quick Search</a>
        <div class="modal-wrapper" data-wrapper="modal-wrapper-large">
         <div class="modal-content">
          <div class="modal-intro">
           <h2>Quick way to find the best deals</h2>
           <p>Amazon offers thousands of great deals, but finding the best deal through endless pages might make you crazy. It offers a quick way to find the best deals on Amazon. You are going to get awesome deals just by clicking on the percentage off next to the category you want to browse.</p>
          </div>
          <%= render 'shared/amazon_table' %>
         </div>
        </div>
      </div>
    </section>  
   </section><br/>

  </section>

  <section>
   <h3>POPULAR DEALS</h3>
   <div id="sidebar">
    <ul id="side-rcnt-thumb-post-list">      
      <% @dealzon_side.each do |ds| %>
        <li>
          <div class="srtpl-l">
            <%= link_to (image_tag ds.am_image), ds, :class => "srtpl-a" %>        
          </div>
          <div class="srtpl-r">
            <p><%= ds.acategory.name %></p>
            <%= link_to ds.am_title, ds, :class => "srtpl-n" %>
          </div>
        </li>
      <% end %>
    </ul>
   </div><br/>

  </section>

   <!-- Accordian -->
   <section>
    <h3>POPULAR DEALS BY CATEGORY</h3>
     <ul id="accord1" class="accordian">
      <li>
        <header>Sales & Offer</header>
        <section>
         <div id="sidebar">
          <ul id="side-rcnt-thumb-post-list">
            <% @dealzon_sale.each do |deal_sale| %>
              <% if deal_sale.acategory_id == 1 %> 
                <li>
                  <div class="srtpl-l">
                    <%= link_to (image_tag deal_sale.am_image), deal_sale, :class => "srtpl-a" %>        
                  </div>
                  <div class="srtpl-r">
                    <%= link_to deal_sale.am_title, deal_sale, :class => "srtpl-n" %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        </section>
      </li>
      <li>
        <header>Deals</header>
        <section>
         <div id="sidebar">
          <ul id="side-rcnt-thumb-post-list">
            <% @dealzon_deal.each do |deal_deal| %>
              <% if deal_deal.acategory_id == 2 %> 
                <li>
                  <div class="srtpl-l">
                    <%= link_to (image_tag deal_deal.am_image), deal_deal, :class => "srtpl-a" %>        
                  </div>
                  <div class="srtpl-r">
                    <%= link_to deal_deal.am_title, deal_deal, :class => "srtpl-n" %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        </section>
      </li>
      <li>
        <header>Promotions</header>
        <section>
         <div id="sidebar">
          <ul id="side-rcnt-thumb-post-list">
            <% @dealzon_promotion.each do |deal_promotion| %>
              <% if deal_promotion.acategory_id == 3 %> 
                <li>
                  <div class="srtpl-l">
                    <%= link_to (image_tag deal_promotion.am_image), deal_promotion, :class => "srtpl-a" %>
                  </div>
                  <div class="srtpl-r">
                    <%= link_to deal_promotion.am_title, deal_promotion, :class => "srtpl-n" %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        </section>
      </li>
      <li>
        <header>Promo Codes</header>
        <section>
         <div id="sidebar">
          <ul id="side-rcnt-thumb-post-list">
            <% @dealzon_code.each do |deal_code| %>
              <% if deal_code.acategory_id == 4 %> 
                <li>
                  <div class="srtpl-l">
                    <%= link_to (image_tag deal_code.am_image), deal_code, :class => "srtpl-a" %>        
                  </div>
                  <div class="srtpl-r">
                    <%= link_to deal_code.am_title, deal_code, :class => "srtpl-n" %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        </section>
      </li>
    </ul>
   </section>
   <!-- Accordian --> 

   <!-- Featured posts -->
    <section class="featured-posts">
      <h3>LATEST BLOG</h3>
      <% @blogs.each do |blog| %>
        <article>
          <a href="#" class="image fit"><img src="<%= blog.blog_image %>" alt=""></a>
          <header>
            <span class="date"><%= blog.blog_date %></span>
            <!-- <h3><a href="#"><%= blog.blog_title %></a></h3> -->
            <h3><%= link_to blog.blog_title, blog %></h3>
          </header>
          <p><%= blog.blog_intro %></p>
          <ul class="actions">
            <li><a href="/blogs/<%= blog.id %>" class="button">Continue Reading</a></li>
          </ul>
        </article>
      <% end %>
    </section>

 
</aside>