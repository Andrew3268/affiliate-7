

<%# for Accordian %>
<script>
    $.fn.ashCordian = function() {
    
    var container = $(this);

    container.find('header').click(function() {
      if($(this).siblings('section').css('display') == 'block'){
         container.find('section').slideUp(150);
      } else {
        container.find('section').slideUp(150);
         $(this).siblings('section').slideDown(150);
      }
    });
  };
  $('#accord1').ashCordian();
  $('#accord2').ashCordian();

</script>


<%# for Modal of amazon table in the sidebar %>
<script>
  $('[data-modal]').click(function(e){
  e.preventDefault();
  $(this).parent().find('[data-wrapper]').addClass('active');
});

$('[data-wrapper]').click(
  function(modal){
  if (modal.target == this) {
    $(this).removeClass('.modal-wrapper active');
  }
});
</script>

